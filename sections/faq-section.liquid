{% comment %}
  FAQ Section
  Part 1: editable title & subheading
  Part 2: dynamic FAQ blocks rendered as <details> accordions
  New: one image_picker setting for the dropdown chevron icon
  Layout: copy and FAQ side-by-side on desktop, stacked on mobile
{% endcomment %}

<link rel="stylesheet" href="{{ 'faq-section.css' | asset_url }}">

<section class="faq-section">
  <div class="page-width">
    {% style %}
      .faq-wrapper {
        display: flex;
        gap: 32px;
      }
      @media (max-width: 768px) {
        .faq-wrapper {
          flex-direction: column;
        }
      }
    {% endstyle %}

    <div class="faq-wrapper">
      <!-- Copy Column -->
      <div class="faq-copy">
        {% if section.settings.title != blank %}
          <h2 class="faq-title">{{ section.settings.title }}</h2>
        {% endif %}
        {% if section.settings.subheading != blank %}
          <p class="faq-subheading">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>

      <!-- FAQ Column -->
      <div class="faq-container">
        {% for block in section.blocks %}
          <details class="faq-item">
            <summary class="faq-question">
              {{ block.settings.question }}
              {% if section.settings.icon_chevron %}
                <img
                  class="faq-icon"
                  src="{{ section.settings.icon_chevron | image_url: width:24, height:24 }}"
                  alt="Toggle answer"
                  width="24"
                  height="24"
                >
              {% else %}
                <!-- fallback SVG here -->
                <svg class="faq-icon" width="24" height="24" aria-hidden="true">
                  <use xlink:href="#icon-arrow-down"></use>
                </svg>
              {% endif %}
            </summary>
            <div class="faq-answer">
              {{ block.settings.answer }}
            </div>
          </details>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "FAQ Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "icon_chevron",
      "label": "Chevron Icon (applies to all questions)"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Frequently Asked Questions"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Section Subheading",
      "default": "Here are answers to our most common questions."
    }
  ],
  "blocks": [
    {
      "type": "faq",
      "name": "Question & Answer",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "What is your return policy?"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Answer",
          "default": "You can return any unused items within 30 days for a full refund."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ Section",
      "category": "Pages"
    }
  ]
}
{% endschema %}
