{% style %}
  .hero-wrapper {
      width: 100%;
      height: 100vh;
      position: relative;
      display: flex;
      align-items: center;
      padding-bottom: 33px;
    }

    .hero-wrapper img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      position: absolute;
      top: 0;
      left 0;
      z-index: -1;
    }

    .hero-container {
      width: 100%;
      color: white;
    }

    .hero-container h1, .hero-container p{
      margin: 0;
      color: white;
    }

    .hero-container h1 {
      font-size: 58px;
      margin-bottom: 8px;
      font-weight: 700;
      letter-spacing: 100%;
    }

    .hero-container p {
      font-size: 18px;
      font-family: 'Satoshi', sans-serif;
      font-weight: 500;
    }

    .hero-content {
      width: fit-content;
    }

    .cta-container {
    display: flex;
    flex-direction: column;
    gap: 18px;
    margin-top: 24px;
    width: 50%
  }

    .c-hero-button {
      text-decoration: none;
      color: white;
      padding: 12px 16px;
      border-radius: 4px;
      width: 100%;
      height: 48px;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .c-hero-button.primary {
      background-color: {{ section.settings.primary_button }};
    }

    .c-hero-button.secondary {
      background-color: {{ section.settings.secondary_button }};
    }

    @media (max-width: 426px) {
      .hero-wrapper {
        flex-direction: column;
        height: fit-content;
      }

      .hero-wrapper img {
        position: static;
        width: 100%;
        height: 300px;
      }

      .hero-container h1, .hero-container p{
        color: #292929;
        text-align: center;
      }

      .hero-container h1 {
        margin-top: 33px;
        font-size: 36px
      }

      .cta-container {
        width: 100%;
      }
    }
{% endstyle %}

<div class="hero-wrapper">
  {{ section.settings.hero_background_image | image_url: width: 1980, height: 1080 | image_tag }}
  <div class="hero-container page-width">
    <div class="hero-content">
      <h1>Elevate Your Wellness</h1>
      <p>Discover products and insights crafted to support your holistic health.</p>

      <div class="cta-container">
        <a class="c-hero-button primary" href="{{ section.settings.hero_cta_1_link }}">
          {{- section.settings.hero_cta_1_text -}}
        </a>
        <a class="c-hero-button secondary" href="{{ section.settings.hero_cta_2_link }}">
          {{ section.settings.hero_cta_2_text }}
        </a>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "C-Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_background_image",
      "label": "Hero Image"
    },
    {
      "type": "url",
      "id": "hero_cta_1_link",
      "label": "Hero CTA 1 Link"
    },
    {
      "type": "text",
      "id": "hero_cta_1_text",
      "label": "Hero CTA 1 Text"
    },
    {
      "type": "url",
      "id": "hero_cta_2_link",
      "label": "Hero CTA 2 Link"
    },
    {
      "type": "text",
      "id": "hero_cta_2_text",
      "label": "Hero CTA 2 Text"
    },
    {
      "type": "color",
      "id": "primary_button",
      "label": "Primary Button Color"
    },
    {
      "type": "color",
      "id": "secondary_button",
      "label": "Secondary Button Color"
    }
  ],
  "presets": [{ "name": "C-Hero" }]
}
{% endschema %}
