{% comment %}
  Socials Section
  Combines a newsletter signup and social media links with editable settings.
{% endcomment %}

<link rel="stylesheet" href="{{ 'socials-section.css' | asset_url }}">

<section class="socials-section page-width">
  <!-- Newsletter Aspect -->
  <div class="socials-aspect newsletter-aspect">
    {% if section.settings.newsletter_title %}
      <h2 class="aspect-title">{{ section.settings.newsletter_title }}</h2>
    {% endif %}
    {% if section.settings.newsletter_text %}
      <p class="aspect-text">{{ section.settings.newsletter_text }}</p>
    {% endif %}
    <div class="aspect-content">
      <div class="newsletter-form-wrapper">
        <form method="post" action="/contact#contact_form" accept-charset="UTF-8" class="newsletter-form">
          <input type="hidden" name="form_type" value="customer">
          <label for="newsletter-email-{{ section.id }}" class="visually-hidden">Email address</label>
          <input
            type="email"
            name="contact[email]"
            id="newsletter-email-{{ section.id }}"
            placeholder="{{ section.settings.newsletter_placeholder }}"
            required
          >
          <button type="submit">{{ section.settings.newsletter_button_text }}</button>
        </form>
      </div>
      <div class="newsletter-image">
        {% if section.settings.newsletter_image %}
          <img
            src="{{ section.settings.newsletter_image | image_url: width: 300, height: 500 }}"
            alt="{{ section.settings.newsletter_title }}"
            width="300"
            height="500"
          >
        {% endif %}
      </div>
    </div>
  </div>

  <!-- Social Platforms Aspect -->
  <div class="socials-aspect platforms-aspect">
    {% if section.settings.social_title %}
      <h2 class="aspect-title">{{ section.settings.social_title }}</h2>
    {% endif %}
    {% if section.settings.social_text %}
      <p class="aspect-text">{{ section.settings.social_text }}</p>
    {% endif %}
    <div class="aspect-content social-icons-container">
      {% if section.settings.twitter_url %}
        <a
          href="{{ section.settings.twitter_url }}"
          class="social-icon social-icon--twitter"
          target="_blank"
          rel="noopener"
          aria-label="Twitter"
        >
          {% if section.settings.twitter_icon %}
            <img
              src="{{ section.settings.twitter_icon | image_url: width:50, height:50 }}"
              alt="Twitter icon"
              width="50"
              height="50"
            >
          {% else %}
            <svg class="icon icon-twitter" role="img">
              <use xlink:href="#icon-twitter"></use>
            </svg>
          {% endif %}
        </a>
      {% endif %}

      {% if section.settings.instagram_url %}
        <a
          href="{{ section.settings.instagram_url }}"
          class="social-icon social-icon--instagram"
          target="_blank"
          rel="noopener"
          aria-label="Instagram"
        >
          {% if section.settings.instagram_icon %}
            <img
              src="{{ section.settings.instagram_icon | image_url: width:50, height:50 }}"
              alt="Instagram icon"
              width="50"
              height="50"
            >
          {% else %}
            <svg class="icon icon-instagram" role="img">
              <use xlink:href="#icon-instagram"></use>
            </svg>
          {% endif %}
        </a>
      {% endif %}

      {% if section.settings.tiktok_url %}
        <a
          href="{{ section.settings.tiktok_url }}"
          class="social-icon social-icon--tiktok"
          target="_blank"
          rel="noopener"
          aria-label="TikTok"
        >
          {% if section.settings.tiktok_icon %}
            <img
              src="{{ section.settings.tiktok_icon | image_url: width:50, height:50 }}"
              alt="TikTok icon"
              width="50"
              height="50"
            >
          {% else %}
            <svg class="icon icon-tiktok" role="img">
              <use xlink:href="#icon-tiktok"></use>
            </svg>
          {% endif %}
        </a>
      {% endif %}

      {% if section.settings.youtube_url %}
        <a
          href="{{ section.settings.youtube_url }}"
          class="social-icon social-icon--youtube"
          target="_blank"
          rel="noopener"
          aria-label="YouTube"
        >
          {% if section.settings.youtube_icon %}
            <img
              src="{{ section.settings.youtube_icon | image_url: width:50, height:50 }}"
              alt="YouTube icon"
              width="50"
              height="50"
            >
          {% else %}
            <svg class="icon icon-youtube" role="img">
              <use xlink:href="#icon-youtube"></use>
            </svg>
          {% endif %}
        </a>
      {% endif %}

      {% if section.settings.facebook_url %}
        <a
          href="{{ section.settings.facebook_url }}"
          class="social-icon social-icon--facebook"
          target="_blank"
          rel="noopener"
          aria-label="Facebook"
        >
          {% if section.settings.facebook_icon %}
            <img
              src="{{ section.settings.facebook_icon | image_url: width:50, height:50 }}"
              alt="Facebook icon"
              width="50"
              height="50"
            >
          {% else %}
            <svg class="icon icon-facebook" role="img">
              <use xlink:href="#icon-facebook"></use>
            </svg>
          {% endif %}
        </a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Socials Section",
  "settings": [
    {
      "type": "text",
      "id": "newsletter_title",
      "label": "Newsletter Title",
      "default": "Subscribe to Our Newsletter"
    },
    {
      "type": "textarea",
      "id": "newsletter_text",
      "label": "Newsletter Text",
      "default": "Stay updated with our latest news and offers."
    },
    {
      "type": "image_picker",
      "id": "newsletter_image",
      "label": "Newsletter Image"
    },
    {
      "type": "text",
      "id": "newsletter_placeholder",
      "label": "Email Input Placeholder",
      "default": "Enter your email"
    },
    {
      "type": "text",
      "id": "newsletter_button_text",
      "label": "Subscribe Button Text",
      "default": "Subscribe"
    },
    {
      "type": "text",
      "id": "social_title",
      "label": "Social Media Title",
      "default": "Follow Us"
    },
    {
      "type": "textarea",
      "id": "social_text",
      "label": "Social Media Text",
      "default": "Connect with us on social platforms."
    },
    {
      "type": "url",
      "id": "twitter_url",
      "label": "Twitter URL"
    },
    {
      "type": "image_picker",
      "id": "twitter_icon",
      "label": "Twitter Icon"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL"
    },
    {
      "type": "image_picker",
      "id": "instagram_icon",
      "label": "Instagram Icon"
    },
    {
      "type": "url",
      "id": "tiktok_url",
      "label": "TikTok URL"
    },
    {
      "type": "image_picker",
      "id": "tiktok_icon",
      "label": "TikTok Icon"
    },
    {
      "type": "url",
      "id": "youtube_url",
      "label": "YouTube URL"
    },
    {
      "type": "image_picker",
      "id": "youtube_icon",
      "label": "YouTube Icon"
    },
    {
      "type": "url",
      "id": "facebook_url",
      "label": "Facebook URL"
    },
    {
      "type": "image_picker",
      "id": "facebook_icon",
      "label": "Facebook Icon"
    }
  ],
  "presets": [
    {
      "name": "Socials Section"
    }
  ]
}
{% endschema %}
