<link rel="stylesheet" href="{{ 'about-me.css' | asset_url }}">

<section class="about-me-section page-width">
  <div class="about-me-wrapper">
    <!-- Text Column -->
    <div class="about-me-text">
      {% if section.settings.title != blank %}
        <h2 class="about-me-title">{{ section.settings.title }}</h2>
      {% endif %}
      {% if section.settings.subheading != blank %}
        <p class="about-me-subheading">{{ section.settings.subheading }}</p>
      {% endif %}
      {% if section.settings.content != blank %}
        <div class="about-me-content">
          {{ section.settings.content }}
        </div>
      {% endif %}
    </div>

    <!-- Image Column -->
    {% if section.settings.image %}
      <div class="about-me-image">
        {{ section.settings.image | image_url: width: 1920, height: 1080 | image_tag }}
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "About Me",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "About Me"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "A little bit about who I am"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Section Content",
      "default": "<p>Write your about me story here. Use the rich text editor to add formatting, links, or images.</p>"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Profile Image"
    }
  ],
  "presets": [
    {
      "name": "About Me",
      "category": "Pages"
    }
  ]
}
{% endschema %}
